{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/api/submit",
      "methods": ["POST"],
      "dest": "/api/submit.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
